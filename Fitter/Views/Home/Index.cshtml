@{
    ViewBag.Title = "JoinME";
}

@model Fitter.Models.ListModelViews


<div class="contentHome">
    @foreach (var item in Model.ModelSports)
    {
        <div class="card text-center myCustomCard">
            <div class="myCustomStyle card-header">
                <div class="card-header">
                    <div class="row">
                        <div class="col-sm-4"><p><span></span></p></div>
                        <div class="col-sm-4"><p><span>@item.Name</span><span class="span-km"> @item.Distance</span></p></div>
                        <div class="col-sm-4"><p><span class="span-number badge">5</span></p></div>
                    </div>
                </div>
            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col-sm-4"><img width="100em" src="@Url.Content(String.Format("~/Content/Images/{0}", item.src))"/></div>
                    <div class="col-sm-8">
                        <p class="card-text">@item.Description</p>
                        <p>
                        @for (var i = 0; i < item.Distance - 10; i++)
                        {
                            <span class="glyphicon glyphicon-star"></span>
                        }
                        </p>
                        <a href="~/Home/Info/@item.SportId" class="MyBotton first btn btn-primary">Info</a>
                        <a href="~/Home/Index" class="MyBotton btn btn-primary">Join</a>
                    </div>
                </div>
            </div>
        </div>
    }
    
</div>
